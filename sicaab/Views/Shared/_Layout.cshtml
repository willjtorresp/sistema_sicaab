<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div id="columna" class="row">
        <div id="sidebar" class="col-md-2">
            @*<img src="" class="img-fluid" alt="Responsive image">*@
            <p id="Sistema"><b>SISTEMA</b> SICAAB</p>
            <br /><br />
            <div class="">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border border-dark text-center">@Html.ActionLink("Inicio", "index", "Home")</li>

                    <li class="list-group-item border border-dark text-center"> @Html.ActionLink("Crear Articulos", "Create", "Articulos")</li>

                    <li class="list-group-item border border-dark text-center">@Html.ActionLink("Articulos", "index", "Articulos")</li>

                </ul>
                <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                <footer class="footer mt-auto py-3">
                    <div class="container">
                        <span class="text-muted">&copy; @DateTime.Now.Year</span>
                    </div>
                </footer>


            </div>
        </div>
        <div id="contenido" class="col-md-10">
            @RenderBody()

        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
